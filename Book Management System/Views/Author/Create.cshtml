@model Book_Management_System.Models.Author

@{
    ViewBag.Title = "Create Author";
}

<h2>Create New Author</h2>

@using (Html.BeginForm("Create", "Author", FormMethod.Post))

{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="AuthorName">Author Name</label>
        @Html.TextBoxFor(model => model.AuthorName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.AuthorName, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
    <a href="@Url.Action("Index", "Author")" class="btn btn-secondary mt-2">Cancel</a>
}
